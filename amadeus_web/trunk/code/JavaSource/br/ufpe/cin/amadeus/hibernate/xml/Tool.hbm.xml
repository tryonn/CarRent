<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping	PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
 <class name="br.ufpe.cin.amadeus.system.academic.tool.Tool" table="tool">
 	<id name="id">
 		<column name="sqTool" not-null="true" />
 		<generator class="increment"/>
 	</id>
 	<property name="name">
 		<column name="nmTool" length="100" not-null="true" />
 	</property>
 	
 	<property name="description">
 	<column name="dstool" not-null="true" />
 	</property>

 </class>
</hibernate-mapping>