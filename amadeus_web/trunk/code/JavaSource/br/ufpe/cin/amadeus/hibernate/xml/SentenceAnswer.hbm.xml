<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping	PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
       
       <class name="br.ufpe.cin.amadeus.system.academic.module.evaluation.answer.question.sentence.SentenceAnswer" table="sentenceanswer">

              <id name="id">
                  <column name="sqsentence_answer" not-null="true" unique="true"/>
                  <generator class="increment"/>
              </id>

              <property name="status">
                  <column name="ds_status" not-null="true"/>
              </property>
              
              <property name="answer">
              	  <column name="ds_answer"/>
              </property>

           
		</class>
</hibernate-mapping>